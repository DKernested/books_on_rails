<% content_for(:html_title) { @author.name }%>

<h2 class="title is-2"><%=@author.name%></h2>

<p>
  this author <%= @author.books.count %> of the top 200 books.
</p>

<h3 class="title is-3">Books written by <%= @author.name %></h3>

<div class="content">
  <ul>
    <% @author.books.each do |book| %>
      <li><%= link_to book.title, book %></li>
    <% end %>
  </ul>
</div>